{
  "name": "dicee",
  "version": "0.0.0",
  "description": "A virtual dice bag for you apps",
  "main": "./lib/dicee.js",
  "types": "./lib/dicee.d.ts",
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "check-types": "tsc --noEmit",
    "format": "prettier ./ --write",
    "lint": "tslint -p tsconfig.json",
    "lint:fix": "tslint -p tsconfig.json --fix",
    "test": "jest -i --no-cache --coverage",
    "build": "tsc",
    "build:test": "tsc --noEmit",
    "prepare": "husky install"
  },
  "repository": "https://github.com/volothamp/dicee.git",
  "author": "Volothamp Geddarm <volocodes@gmail.com>",
  "license": "MIT",
  "engines": {
    "npm": "Please use Yarn",
    "yarn": ">= 1.22.11"
  },
  "devDependencies": {
    "@types/jest": "^27.5.1",
    "husky": ">=6",
    "jest": "^27.3.1",
    "jest-chain": "^1.1.5",
    "lint-staged": ">=10",
    "prettier": "^2.4.1",
    "ts-jest": "^27.0.7",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.4.4"
  },
  "private": true,
  "lint-staged": {
    "*.{ts,tsx}": "tslint -p tsconfig.json --fix",
    "*.{ts,tsx,js,jsx,md,json}": "prettier --write"
  }
}
